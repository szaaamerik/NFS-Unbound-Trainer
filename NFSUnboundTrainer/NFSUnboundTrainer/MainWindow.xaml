<Window x:Class="NFSUnboundTrainer.MainWindow"
        x:Name="Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:local="clr-namespace:NFSUnboundTrainer"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:MainWindow,IsDesignTimeCreatable=True}"
        Height="700"
        Width="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown"
        BorderThickness="0"
        WindowStartupLocation="CenterOwner">
    
    <Border Background="#111111"
            CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="15"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" CornerRadius="20 20 0 0"/>
            <Border Grid.Row="2" Grid.Column="0" CornerRadius="20 0 0 0">
                <Grid>
                    <StackPanel Margin="20 0"
                                VerticalAlignment="Top">
                        
                        <TextBlock Text="Game Title:"
                                   Foreground="White"/>
                        
                        <TextBlock Margin="0 5 0 0" 
                                   Text="{Binding GameName}"
                                   Foreground="White"/>

                        <TextBlock Margin="0 5 0 0" 
                                   Text="Process Name:"
                                   Foreground="White"/>
                        
                        <TextBlock Margin="0 5 0 0" 
                                   Text="{Binding ProcessName}"
                                   Foreground="White"/>

                        <TextBlock Margin="0 5 0 0" 
                                   Text="Process ID:"
                                   Foreground="White"/>
                        
                        <TextBlock x:Name="ProcessIdLabel" 
                                   Margin="0 5 0 0" 
                                   Text="0"
                                   Foreground="White"/>
                        
                        <TextBlock Margin="0 5 0 0" 
                                   Text="Game Status:"
                                   Foreground="White"/>
                        
                        <TextBlock x:Name="GameStatusLabel" 
                                   Margin="0 5 0 0" 
                                   Text="Off"
                                   Foreground="Red"/>
                        
                    </StackPanel>
                    
                    <StackPanel Margin="20" 
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Center">
                        
                        <StackPanel HorizontalAlignment="Center"
                                    Orientation="Horizontal">

                            <TextBlock Text="Buy Me A Coffee:"
                                       VerticalAlignment="Center"
                                       Foreground="White"/>
                            
                            <Grid Margin="10 0 0 0">
                                    
                                <Path Fill="White"
                                      VerticalAlignment="Center"
                                      Height="25"
                                      Width="25"
